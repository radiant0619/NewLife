<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_alignBottom="@id/search_btn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="60.0dip"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@id/gender_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="15.0dip"
                android:layout_marginTop="20.0dip"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@id/bride_layout"
                    android:layout_width="0.0dip"
                    android:layout_height="60.0dip"
                    android:layout_weight="0.5"
                    android:background="@drawable/searchview_field"
                    android:gravity="center"
                    android:tag="@string/bride">

                    <TextView
                        android:id="@id/bride"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/bride_text"
                        android:textColor="@drawable/selected_text_color"
                        android:textSize="15.0dip" />
                </LinearLayout>

                <LinearLayout
                    android:id="@id/groom_layout"
                    android:layout_width="0.0dip"
                    android:layout_height="60.0dip"
                    android:layout_weight="0.5"
                    android:background="@drawable/searchview_field"
                    android:gravity="center"
                    android:tag="@string/groom">

                    <TextView
                        android:id="@id/groom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/groom_text"
                        android:textColor="@drawable/selected_text_color"
                        android:textSize="15.0dip" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@id/age_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10.0dip"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@id/age_from_layout"
                    android:layout_width="0.0dip"
                    android:layout_height="60.0dip"
                    android:layout_weight="0.5">

                    <TextView
                        android:id="@id/age_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="15.0dip"
                        android:tag="@string/age_from_bride"
                        android:text="@string/age_from_val_bride"
                        android:textColor="@drawable/selected_text_color"
                        android:textSize="15.0dip" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="10.0dip"
                        android:src="@drawable/nextarrow" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@id/age_to_layout"
                    android:layout_width="0.0dip"
                    android:layout_height="60.0dip"
                    android:layout_weight="0.5">

                    <TextView
                        android:id="@id/age_to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10.0dip"
                        android:tag="@string/age_to"
                        android:text="@string/age_to_val"
                        android:textColor="@drawable/selected_text_color"
                        android:textSize="15.0dip" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="15.0dip"
                        android:src="@drawable/nextarrow" />
                </RelativeLayout>
            </LinearLayout>

            <include layout="@layout/divider_line_searchview" />

            <LinearLayout
                android:id="@id/height_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@id/height_from_layout"
                    android:layout_width="0.0dip"
                    android:layout_height="60.0dip"
                    android:layout_weight="0.5">

                    <TextView
                        android:id="@id/tv_height_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="15.0dip"
                        android:tag="@string/height_from_val"
                        android:text="@string/height_from_label"
                        android:textColor="@drawable/selected_text_color"
                        android:textSize="15.0dip" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="10.0dip"
                        android:src="@drawable/nextarrow" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@id/height_to_layout"
                    android:layout_width="0.0dip"
                    android:layout_height="60.0dip"
                    android:layout_weight="0.5">

                    <TextView
                        android:id="@id/tv_height_to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10.0dip"
                        android:tag="@string/height_to_val"
                        android:text="@string/height_to_label"
                        android:textColor="@drawable/selected_text_color"
                        android:textSize="15.0dip" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="15.0dip"
                        android:src="@drawable/nextarrow" />
                </RelativeLayout>
            </LinearLayout>

            <include layout="@layout/divider_line_searchview" />

            <RelativeLayout
                android:id="@id/religion_layout"
                android:layout_width="fill_parent"
                android:layout_height="60.0dip"
                android:background="@color/white">

                <TextView
                    android:id="@id/religion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="15.0dip"
                    android:tag="@string/religion"
                    android:text="@string/religion"
                    android:textColor="@drawable/selected_text_color"
                    android:textSize="15.0dip" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="15.0dip"
                    android:src="@drawable/nextarrow" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/divider_line_search_view" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@id/caste_layout"
                android:layout_width="fill_parent"
                android:layout_height="60.0dip"
                android:background="@color/white"
                android:visibility="gone">

                <TextView
                    android:id="@id/caste"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="15.0dip"
                    android:tag="@string/caste"
                    android:text="@string/caste"
                    android:textColor="@drawable/selected_text_color"
                    android:textSize="15.0dip" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="15.0dip"
                    android:src="@drawable/nextarrow" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/divider_line_search_view" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@id/mother_tounge_layout"
                android:layout_width="fill_parent"
                android:layout_height="60.0dip"
                android:background="@color/white">

                <TextView
                    android:id="@id/mother_tounge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="15.0dip"
                    android:tag="@string/mother_tongue"
                    android:text="@string/mother_tongue"
                    android:textColor="@drawable/selected_text_color"
                    android:textSize="15.0dip" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center|right"
                    android:layout_marginRight="15.0dip"
                    android:src="@drawable/nextarrow" />
            </RelativeLayout>

            <include layout="@layout/divider_line_searchview" />

            <LinearLayout
                android:id="@id/income_layout"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:id="@id/income_from_layout"
                    android:layout_width="0.0dip"
                    android:layout_height="60.0dip"
                    android:layout_weight="0.5">

                    <TextView
                        android:id="@id/tv_income_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="15.0dip"
                        android:tag="@string/income_from_val"
                        android:text="@string/income_from_label"
                        android:textColor="@drawable/selected_text_color"
                        android:textSize="15.0dip" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="10.0dip"
                        android:src="@drawable/nextarrow" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@id/income_to_layout"
                    android:layout_width="0.0dip"
                    android:layout_height="60.0dip"
                    android:layout_weight="0.5">

                    <TextView
                        android:id="@id/tv_income_to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerInParent="true"
                        android:layout_marginLeft="10.0dip"
                        android:tag="@string/income_to_val"
                        android:text="@string/income_to_label"
                        android:textColor="@drawable/selected_text_color"
                        android:textSize="15.0dip" />

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_marginRight="15.0dip"
                        android:src="@drawable/nextarrow" />
                </RelativeLayout>
            </LinearLayout>

            <include layout="@layout/divider_line_searchview" />

            <RelativeLayout
                android:id="@+id/country_layout"
                android:layout_width="fill_parent"
                android:layout_height="60.0dip"
                android:background="@color/white">

                <TextView
                    android:id="@+id/countrytv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="15.0dip"
                    android:tag="@string/country"
                    android:text="@string/country"
                    android:textColor="@drawable/selected_text_color"
                    android:textSize="15.0dip" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="15.0dip"
                    android:src="@drawable/nextarrow" />

                <View
                    android:id="@id/divider_line"
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/divider_line_search_view" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@id/city_layout"
                android:layout_width="fill_parent"
                android:layout_height="60.0dip"
                android:background="@color/white"
                android:visibility="gone">

                <TextView
                    android:id="@id/city"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerInParent="true"
                    android:layout_marginLeft="15.0dip"
                    android:tag="@string/city_state"
                    android:text="@string/city_state"
                    android:textColor="@drawable/selected_text_color"
                    android:textSize="15.0dip" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_centerInParent="true"
                    android:layout_marginRight="15.0dip"
                    android:src="@drawable/nextarrow" />

                <View
                    android:layout_width="fill_parent"
                    android:layout_height="1.0px"
                    android:layout_alignParentBottom="true"
                    android:background="@color/divider_line_search_view" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10.0dip"
                android:layout_marginLeft="15.0dip"
                android:layout_marginRight="15.0dip"
                android:layout_marginTop="10.0dip"
                android:background="@drawable/searchview_field"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@id/with_photo_layout"
                    android:layout_width="0.0dip"
                    android:layout_height="60.0dip"
                    android:layout_weight="0.5"
                    android:background="@drawable/search_with_photo_selected_view"
                    android:gravity="center">

                    <TextView
                        android:id="@id/with_photo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/with_photo"
                        android:textColor="@drawable/selected_text_color"
                        android:textSize="15.0dip" />
                </LinearLayout>

                <View
                    android:layout_width="1.0px"
                    android:layout_height="fill_parent"
                    android:background="@color/pink" />

                <LinearLayout
                    android:id="@id/all_profile_layout"
                    android:layout_width="0.0dip"
                    android:layout_height="60.0dip"
                    android:layout_weight="0.5"
                    android:background="@drawable/search_with_photo_selected_view"
                    android:gravity="center">

                    <TextView
                        android:id="@id/profile"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/profile"
                        android:textColor="@drawable/selected_text_color"
                        android:textSize="15.0dip" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:id="@id/search_btn"
        android:layout_width="fill_parent"
        android:layout_height="60.0dip"
        android:layout_alignParentBottom="true"
        android:background="@drawable/search_btn_default_color"
        android:gravity="center">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="@string/search"
            android:textColor="@color/white"
            android:textSize="17.0dip" />
    </RelativeLayout>

    <ImageView
        android:id="@id/ivHeaderBorder"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleBarLayout"
        android:background="@drawable/border_header" />

    <LinearLayout
        android:id="@id/error_message_layout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleBarLayout"
        android:orientation="vertical"
        android:visibility="invisible" />
</RelativeLayout>