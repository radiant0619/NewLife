<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/myMatchesTab"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/gray"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@id/innerContentHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="15.0dip">

        <TextView
            android:id="@id/myMatchesTabText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:lines="2"
            android:padding="15.0dip"
            android:text="@string/myMatchesTabText" />

        <LinearLayout
            android:id="@id/layoutDropDownButtons"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/myMatchesTabText"
            android:orientation="horizontal"
            android:paddingLeft="15.0dip"
            android:paddingRight="15.0dip">

            <TextView
                android:id="@id/tvChangeDpp"
                android:layout_width="0.0dip"
                android:layout_height="40.0dip"
                android:layout_below="@id/myMatchesTabText"
                android:layout_marginRight="3.0dip"
                android:layout_weight="0.5"
                android:background="@color/my_js_red"
                android:clickable="true"
                android:gravity="center"
                android:text="Change"
                android:textColor="@color/white" />

            <TextView
                android:id="@id/tvLaterDpp"
                android:layout_width="0.0dip"
                android:layout_height="40.0dip"
                android:layout_below="@id/myMatchesTabText"
                android:layout_toRightOf="@id/tvChangeDpp"
                android:layout_weight="0.5"
                android:background="@color/grey9"
                android:clickable="true"
                android:gravity="center"
                android:text="I will do it later"
                android:textColor="@color/white" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>